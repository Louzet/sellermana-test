{% extends 'template.html.twig' %}

{% block htmlTitle %}
    {{ 'concurrent.list' | trans | capitalize }} {{ parent() }}
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <h3 class="text-center">{{ 'concurrent.list' | trans | title }}</h3>

                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th scope="col">{{ 'concurrent.name' | trans }}</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for concurrent in concurrents %}
                            <tr class="table-secondary">
                                <td>{{ concurrent.name }}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
